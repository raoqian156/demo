<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="@color/downloadProgressBackground"
                android:centerY="0.75"
                android:endColor="@color/downloadProgressBackground"
                android:startColor="@color/downloadProgressBackground" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="@color/downloadProgressValue"
                    android:centerY="0.75"
                    android:endColor="@color/downloadProgressValue"
                    android:startColor="@color/downloadProgressValue" />
            </shape>
        </clip>
    </item>

</layer-list>
